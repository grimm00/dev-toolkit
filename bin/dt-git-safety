#!/usr/bin/env bash

# Dev Toolkit - Git Flow Safety Checks Wrapper
# Runs automated Git Flow workflow compliance checks

# Detect toolkit installation location
if [ -n "${DT_ROOT:-}" ]; then
    TOOLKIT_ROOT="$DT_ROOT"
elif [ -f "$HOME/.dev-toolkit/lib/git-flow/safety.sh" ]; then
    TOOLKIT_ROOT="$HOME/.dev-toolkit"
else
    echo "‚ùå Error: Cannot locate dev-toolkit installation"
    echo "üí° Set DT_ROOT environment variable or install to ~/.dev-toolkit"
    exit 1
fi

# Execute the safety checks with all arguments
exec "$TOOLKIT_ROOT/lib/git-flow/safety.sh" "$@"
